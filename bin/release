#!/usr/bin/env bash
# bin/release <build-dir>

METEOR_BUILD_DIR=.meteor/heroku_build

if [ -f HEROKU_METEORITE_BUILD_DIR ]; then
    BUILD_DIR=$1/$(cat HEROKU_METEORITE_BUILD_DIR)/$METEOR_BUILD_DIR
else
    BUILD_DIR=$1/$METEOR_BUILD_DIR
fi

cat <<EOF
---
addons:
  - mongohq:sandbox
default_process_types:
  web: $BUILD_DIR/bin/node $BUILD_DIR/app/main.js
EOF
